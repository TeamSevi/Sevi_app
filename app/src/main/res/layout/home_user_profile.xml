<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.UserProfile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/p"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_profile"
        android:layout_centerHorizontal="true"
        android:text="@string/mr_mkm"
        android:textSize="24sp"
        android:textStyle="bold" />
<ImageView
    android:id="@+id/design"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:src="@drawable/p"
    android:layout_below="@id/name"
    tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/F_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/design"
        android:text="@string/F_name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/Fe_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/design"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="2dp"
        android:hint="@string/F_name"
        android:textSize="24sp"
        android:layout_marginStart="150dp"
        android:importantForAutofill="no"
        tools:ignore="TextFields" />
    <TextView
        android:id="@+id/l_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/F_name"
        android:text="@string/l_name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/le_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Fe_name"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="2dp"
        android:hint="@string/l_name"
        android:textSize="24sp"
        android:layout_marginStart="150dp"
        android:importantForAutofill="no"
        tools:ignore="TextFields" />
    <TextView
        android:id="@+id/Mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_name"
        android:text="@string/mobile_no"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/E_mobile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/le_name"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="2dp"
        android:hint="@string/mobile_no"
        android:textSize="24sp"
        android:layout_marginStart="150dp"
        android:importantForAutofill="no"
        tools:ignore="TextFields" />
    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Mobile"
        android:text="@string/U_email"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/E_Email"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/E_mobile"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="2dp"
        android:hint="@string/U_email"
        android:textSize="24sp"
        android:layout_marginStart="150dp"
        android:importantForAutofill="no"
        tools:ignore="TextFields" />

</RelativeLayout>

